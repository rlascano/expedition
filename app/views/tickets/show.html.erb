<header>
  <h2>Detalles del Ticket</h2>
</header>

<ul class="trucker-detail">
  <li><b>ID:</b> <%= @ticket.id %></li>
  <li><b>Cliente:</b> <%= @ticket.client.name %></li>
  <li><b>Categoria:</b> <%= @ticket.category.name %></li>
  <li><b>Producto:</b> <%= @ticket.product.name %></li>
  <li><b>Transportista:</b> <%= @ticket.carrier.name %></li>
  <li><b>Chofer:</b> <%= @ticket.trucker.full_name %></li>
</ul>
<div class="links">
  <%= link_to "Volver", tickets_path, class:'btn btn-default' %>
  <%= link_to "Editar", edit_ticket_path(@ticket), class:'btn btn-default' %>
  <%= link_to "Borrar", ticket_path(@ticket),
      method: :delete,
      data: {confirm: "Â¿Esta seguro?" }, class:'btn btn-danger' %>
</div>
